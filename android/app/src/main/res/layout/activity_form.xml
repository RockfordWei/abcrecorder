<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="16dp"
                android:text="@string/text_date_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/textTimeStart"
                android:hint="@string/text_start_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="@string/text_start_time"
                android:inputType="datetime" />
            <EditText
                android:id="@+id/textTimeStop"
                android:hint="@string/text_end_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="@string/text_end_time"
                android:inputType="datetime" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>